@model IEnumerable<EventManagementSystem.Models.event_category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<div class="row">
    <div class="col-md-6">
        <a asp-action="Create" class="text-decoration-none btn btn-primary">Create New</a>
    </div>
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control me-2 rounded-3" placeholder="Search events" value="@ViewData["CurrentFilter"]" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                Category
            </th>
            <th>
                Description
            </th>
            <th>
                Price Per Hour ($)
            </th>
            <th>
                Price Per Day ($)
            </th>
            <th>
                Is Active
            </th>
            <th>
                Max capacity
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price_per_hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price_per_day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.is_active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.max_capacity)
            </td>
            <td>
                <div class="d-flex gap-2">
                    <div class="col">
                        <a asp-action="Edit" asp-route-id="@item.category_id" class="btn btn-warning btn-sm btn-block">Edit</a>
                    </div>
                    <div class="col">
                        <a asp-action="Details" asp-route-id="@item.category_id" class="btn btn-info btn-sm btn-block">Details</a>
                    </div>
                    <div class="col">
                        <a asp-action="Delete" asp-route-id="@item.category_id" class="btn btn-danger btn-sm btn-block">Delete</a>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
