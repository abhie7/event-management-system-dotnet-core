@model EventManagementSystem.Models.eventstable

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-primary mb-4">Delete</h1>

<div class="row d-flex align-items-center justify-content-center">
<div class="col-md-6 card p-4 shadow-lg rounded-lg">
    <h4 class="text-center text-secondary mb-3">Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-5">
            Event Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.event_name)
        </dd>
        <dt class = "col-sm-5">
            Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.category)
        </dd>
        <dt class = "col-sm-5">
            Start Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.start_date)
        </dd>
        <dt class = "col-sm-5">
            End Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.end_date)
        </dd>
        <dt class = "col-sm-5">
            Venue
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.venue)
        </dd>
        <dt class = "col-sm-5">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.status)
        </dd>
        <dt class = "col-sm-5">
            Booking User Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.booking_user_name)
        </dd>
    </dl>
    <div class="d-flex justify-content-between mt-3">
        <form asp-action="Delete" class="d-inline-block">
            <input type="hidden" asp-for="event_id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
</div>